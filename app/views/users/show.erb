<div id="profile">
<!-- profile image goes here -->
  <p>Name: <%= @user.name %></p>
  <p>Username: <%= @user.username %></p>
  <p>Email: <%= @user.email %></p>
</div>

<!-- edit information -->
<% if session[:user_id] == @user.id %>
  <button id="get-edit-profile-form">
    Edit Profile
  </button>
<% end %>

<form id="update-profile" action="/users/<%= @user.id %>" method="post" name="<%= @user.id %>">
  <p> Name: </p>
  <input class="name" type="text" value="<%= @user.name %>" name="name">
  <p> Username: </p>
  <input class="username" type="text" value="<%= @user.username %>" name="username">
  <input type="submit">
</form>

